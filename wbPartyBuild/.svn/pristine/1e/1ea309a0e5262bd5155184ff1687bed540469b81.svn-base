package com.wb.web.portals.dto.content;

import com.wb.core.common.dto.BaseQueryDTO;

public class ContentQueryDTO extends BaseQueryDTO{
	
	private Long columId;
	private String title;
	private String author;		
	private String source;	
	private Long parId;
	private String searchType;
	
	//以下用于搜索内容页面
	private Integer days;   //搜索时间距当前时间的天数
	
	//查询列表是否为手机端文章管理页面             DAO中添加了app_status排序条件
	private Boolean appContent = false;
	
	

	public Long getColumId() {
		return columId;
	}

	public void setColumId(Long columId) {
		this.columId = columId;
	}

	public String getTitle() {
		return title;
	}

	public void setTitle(String title) {
		this.title = title;
	}

	public String getAuthor() {
		return author;
	}

	public void setAuthor(String author) {
		this.author = author;
	}

	public String getSource() {
		return source;
	}

	public void setSource(String source) {
		this.source = source;
	}

	public Long getParId() {
		return parId;
	}

	public void setParId(Long parId) {
		this.parId = parId;
	}


	public Integer getDays() {
		return days;
	}

	public void setDays(Integer days) {
		this.days = days;
	}

	public Boolean getAppContent() {
		return appContent;
	}

	public void setAppContent(Boolean appContent) {
		this.appContent = appContent;
	}

	public String getSearchType() {
		return searchType;
	}

	public void setSearchType(String searchType) {
		this.searchType = searchType;
	}
	
	
	

}
