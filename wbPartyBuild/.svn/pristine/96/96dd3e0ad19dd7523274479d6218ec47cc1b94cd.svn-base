<%@ page language="java" import="java.util.*" pageEncoding="utf-8"%>


  <div class="row cl">
     <label class="form-label col-xs-3 col-sm-3"><span class="c-red">*</span>申请人：</label>
     <div class="formControls col-xs-5 col-sm-5">
       <input id="user-name" type="text" class="input-text"  value="${joinItem.applyUserName}" name="applyUserName" datatype="*2-50" nullmsg="申请人不能为空" onclick="choiceUser()" readonly="readonly">
       <input id="user-id" value="${joinItem.applyUserId}" name="applyUserId" type="hidden"> 
     </div>
     <div class="col-xs-4 col-sm-4"> </div>
   </div>
   
   <div class="row cl">
     <label class="form-label col-xs-3 col-sm-3"><span class="c-red">*</span>部门：</label>
     <div class="formControls col-xs-5 col-sm-5">
       <input type="text" class="input-text" value="${joinItem.department}"   name="department" datatype="*2-50" nullmsg="部门不能为空">
     </div>
     <div class="col-xs-4 col-sm-4"> </div>
   </div>
   
   <div class="row cl">
     <label class="form-label col-xs-3 col-sm-3"><span class="c-red">*</span>备注：</label>
     <div class="formControls col-xs-5 col-sm-5">
     	<textarea name="memo" class="textarea" id="memo"  placeholder="说点什么...最少输入10个字符" onKeyUp="textarealength(this,300)" ignore="ignore" >${joinItem.memo}</textarea>
	<p class="textarea-numberbar"><em class="textarea-length">0</em>/300</p>
     </div>
     <div class="col-xs-4 col-sm-4"> </div>
   </div>
 
